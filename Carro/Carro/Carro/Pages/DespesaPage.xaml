<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carro.Pages.RelatorioPage">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Padding="30" Spacing="30">
        <Label Text="Cadastro de despesa"></Label>
        <Entry x:Name = "despesaNomeE" Placeholder="Nome" Keyboard="Text"></Entry>
        <Entry x:Name ="despesaValorE" Placeholder="Valor gasto"></Entry>
        <Button x:Name ="Salvar" Text="Salvar" Clicked="SalvarClicked"></Button>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
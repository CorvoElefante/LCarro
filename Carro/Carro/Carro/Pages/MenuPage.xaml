<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:Carro.Resources;assembly=Carro"
             x:Class="Carro.Pages.MenuPage"
             Title="Menu">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Spacing="0">
      <StackLayout>
        <Button x:Name ="menuVendaE" Text="Vendas" Command="{Binding MenuVendaCommand}"></Button>
      </StackLayout>
      <StackLayout>
        <Button x:Name ="menuOrdemE" Text="Ordens de venda" Command="{Binding MenuOrdemCommand}"></Button>
      </StackLayout>
      <StackLayout>
        <Button x:Name ="menuDespesaE" Text="Custos" Command="{Binding MenuCustosCommand}"></Button>
      </StackLayout>
      <StackLayout>
        <Button x:Name ="menuRelatoriosE" Text="Relatórios" Command="{Binding MenuRelatoriosCommand}"></Button>
      </StackLayout>
      <StackLayout>
        <Button x:Name ="menuClientesE" Text="Clientes" Command="{Binding MenuClientesCommand}"></Button>
      </StackLayout>
      <StackLayout>
        <Button x:Name ="menuFuncionarioE" Text="Funcionário" Command="{Binding MenuFuncionarioCommand}"></Button>
      </StackLayout>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
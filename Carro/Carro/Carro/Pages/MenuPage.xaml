<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:Carro.Resources;assembly=Carro"
             x:Class="Carro.Pages.MenuPage"
             Title="Menu">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout>
      <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Button x:Name ="VendaEntry" Text="Vendas" Command="{Binding MenuVendaCommand}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></Button>
      </StackLayout>
      <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Button x:Name ="ServicoEntry" Text="Serviços" Command="{Binding MenuServicoCommand}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></Button>
      </StackLayout>
      <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Button x:Name ="DespesaEntry" Text="Custos" Command="{Binding MenuCustosCommand}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></Button>
      </StackLayout>
      <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Button x:Name ="RelatoriosEntry" Text="Relatórios" Command="{Binding MenuRelatoriosCommand}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></Button>
      </StackLayout>
      <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Button x:Name ="ClientesEntry" Text="Clientes" Command="{Binding MenuClientesCommand}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></Button>
      </StackLayout>
      <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Button x:Name ="FuncionarioEntry" Text="Funcionário" Command="{Binding MenuFuncionarioCommand}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></Button>
      </StackLayout>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
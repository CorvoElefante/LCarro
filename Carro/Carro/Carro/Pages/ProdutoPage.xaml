<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carro.ProdutoPage">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Padding="30" Spacing="30">
        <Entry x:Name = "produtonomeE" Placeholder="Nome" Keyboard="Text"></Entry>
        <Entry x:Name ="produtovalorcompraE" Placeholder="Valor gasto"></Entry>
        <Entry x:Name ="produtovalorvendaE" Placeholder="Preço de venda"></Entry>
        <Entry x:Name ="produtomarcaE" Placeholder="Marca"></Entry>
        <Entry x:Name ="produtodescricaoE" Placeholder="Descrição"></Entry>
        <Entry x:Name ="produtolovalE" Placeholder="Local no estoque"></Entry>
        <Button x:Name ="Salvar" Text="Salvar" Clicked="SalvarClicked"></Button>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
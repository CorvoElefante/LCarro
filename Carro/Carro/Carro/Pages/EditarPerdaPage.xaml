<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:Carro.Resources;assembly=Carro"
             x:Class="Carro.Pages.EditarPerdaPage"
             Title="Editar Despesa"
             BackgroundColor="#FFFFF7">

    <ContentPage.ToolbarItems>
        <ToolbarItem
      Icon="{x:Static resources:Images.IconeUser232}"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Padding="30" Spacing="30">
            <Entry Text = "{Binding nomeEntry, Mode=TwoWay}" Placeholder="Nome" Keyboard="Text"></Entry>
            <Entry Text = "{Binding quantidadeEntry, Mode=TwoWay}" Placeholder="Quantidade perdida" Keyboard="Numeric"></Entry>
            <Entry Text = "{Binding justificativaEntry, Mode=TwoWay}" Placeholder="Justificativa" Keyboard="Text"></Entry>
            <Grid>
                <Button Text="Salvar" Grid.Column="0" Command="{Binding SalvarPerdaCommand}"></Button>
                <Button Text="Deletar" Grid.Column="1" Command="{Binding DeletarPerdaCommand}"></Button>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>
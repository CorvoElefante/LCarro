<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carro.Pages.CadastroFuncionarioPage"
             Title="Novo Funcionário">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Padding="30" Spacing="30">
        <Label Text="Cadastro de Funcionário"></Label>
        <Entry Text ="{Binding NomeEntry, Mode=TwoWay}" Placeholder="Nome" Keyboard="Text"></Entry>
        <Entry Text ="{Binding RuaNEntry, Mode=TwoWay}" Placeholder="Rua"></Entry>
        <Entry Text ="{Binding BairroEntry, Mode=TwoWay}" Placeholder="Bairro"></Entry>
        <Entry Text ="{Binding CpfEntry, Mode=TwoWay}" Placeholder="CPF" Keyboard="Numeric"></Entry>
        <Entry Text ="{Binding TelefoneEntry, Mode=TwoWay}" Placeholder="Telefone" Keyboard="Telephone"></Entry>
        <Entry Text ="{Binding DataEntry, Mode=TwoWay}" Placeholder="Data de nascimento" Keyboard="Numeric"></Entry>
        <Entry Text ="{Binding EmailEntry, Mode=TwoWay}"  Placeholder="Email" Keyboard="Email"></Entry>
        <Entry Text ="{Binding SalarioEntry, Mode=TwoWay}"  Placeholder="Salario"></Entry>
        <Entry Text ="{Binding FuncaoEntry, Mode=TwoWay}"  Placeholder="Função"></Entry>
        <Button Text="Salvar" Command="{Binding SalvarFuncinarioCommand}"></Button>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carro.Pages.CadastroDespesaPage">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Padding="30" Spacing="30">
        <Label Text="Cadastro de despesa"></Label>
        <Entry x:Name = "nomeEntry" Placeholder="Nome" Keyboard="Text"></Entry>
        <Entry x:Name ="valorEntry" Placeholder="Valor gasto"></Entry>
        <Entry x:Name = "descricaoEntry" Placeholder="Descricao" Keyboard="Text"></Entry>
        <Entry x:Name = "categoriaEntry" Placeholder="Categoria" Keyboard="Text"></Entry>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
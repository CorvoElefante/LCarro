<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carro.Pages.Relatorios.RelatorioSaldoResultadoPage"
             BackgroundColor="#FFFFF7"
             Title="Saldo">

    <ContentPage.Content>
        <StackLayout>

            <Label
				Text="Vendas recebidas: "/>

            <Label
				Text="{Binding vendasRecebidas}"/>

            <Label
				Text="Despesas: "/>

            <Label
				Text="{Binding despesas}"/>

            <Label
				Text="Perdas: "/>

            <Label
				Text="{Binding perdas}"/>

            <Label
				Text="Saldo: "/>

            <Label
				Text="{Binding saldo}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:Carro.Resources;assembly=Carro"
             x:Class="Carro.Pages.CadastroPerdaPage"
             Title="Nova Perda"
             BackgroundColor="#FFFFF7">

    <!--Essa page possui "backgroundcolor" claro-->

    <ContentPage.ToolbarItems>
        <ToolbarItem
      Icon="{x:Static resources:Images.IconeUser32}"/>
    </ContentPage.ToolbarItems>

        <ScrollView>
            <StackLayout 
          Padding="30" 
          Spacing="30">
                <Entry 
            Text = "{Binding nomeEntry, Mode=TwoWay}" Placeholder="Nome" Keyboard="Text"/>
                <Entry 
            Text = "{Binding quantidadeEntry, Mode=TwoWay}" Placeholder="Quantidade perdida" Keyboard="Numeric"/>
                <Entry 
            Text = "{Binding justificativaEntry, Mode=TwoWay}" Placeholder="Justificativa" Keyboard="Text"/>

                <Grid
            HorizontalOptions="CenterAndExpand"
            Margin="0"
            Padding="4"
            BackgroundColor="Transparent"
            ColumnSpacing="32">
                    <Grid
                HorizontalOptions="Center"
                Margin="4"
                Padding="0"
                RowSpacing="-8"
                BackgroundColor="Transparent">
                        <Image
                    Source="ic_success64.png"
                    IsOpaque="True"/>
                        <Label
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Text="Salvar"
                    FontSize="Medium"/>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer
                        Command="{Binding SalvarPerdaCommand}"/>
                        </Grid.GestureRecognizers>
                    </Grid>
                    <Grid
                HorizontalOptions="Center"
                Margin="4"
                Padding="0"
                Grid.Column="1"
                RowSpacing="-8"
                BackgroundColor="Transparent">
                        <Image
                    Source="ic_error64.png"
                    IsOpaque="True"/>
                        <Label
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Text="Deletar"
                    FontSize="Medium"/>
                    </Grid>
                </Grid>
            </StackLayout>
        </ScrollView>
</ContentPage>
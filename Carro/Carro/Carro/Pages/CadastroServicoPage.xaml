<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:Carro.Resources;assembly=Carro"
             x:Class="Carro.Pages.CadastroServicoPage"
             Title="Novo Serviço">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Padding="30" Spacing="30">
        <Label Text = "Cadastro de Serviço"></Label>
        <Entry Text = "{Binding NomeEntry, Mode=TwoWay}" Placeholder="Nome" Keyboard="Text"></Entry>
        <Entry Text = "{Binding ValorVendaEntry, Mode=TwoWay}" Placeholder="Preço" Keyboard="Numeric"></Entry>
        <Entry Text = "{Binding DescricaoEntry, Mode=TwoWay}" Placeholder="Descrição"></Entry>
        <Entry Text = "{Binding TempoEntry, Mode=TwoWay}" Placeholder="Tempo de conclusão"></Entry>
        <Button Text = "Salvar" Command="{Binding SalvarServicoCommand}"></Button>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
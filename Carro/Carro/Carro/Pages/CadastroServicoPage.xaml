<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carro.Pages.CadastroServicoPage"
             Title="Novo Serviço">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Padding="30" Spacing="30">
        <Label Text="Cadastro de Serviço"></Label>
        <Entry x:Name = "NomeEntry" Placeholder="Nome" Keyboard="Text"></Entry>
        <Entry x:Name ="ValorVendaEntry" Placeholder="Preço"></Entry>
        <Entry x:Name ="DescricaoEntry" Placeholder="Descrição"></Entry>
        <Entry x:Name ="TempoEntry" Placeholder="Tempo de conclusão"></Entry>
        <!--<Button x:Name ="Salvar" Text="Salvar" Clicked="SalvarClicked"></Button>-->
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>
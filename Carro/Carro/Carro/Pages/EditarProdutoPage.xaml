<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:Carro.Resources;assembly=Carro"
             x:Class="Carro.Pages.EditarProdutoPage"
             Title="Editar Produto"
             BackgroundColor="#FFFFF7">

    <ContentPage.ToolbarItems>
        <ToolbarItem
      Icon="{x:Static resources:Images.IconeUser232}"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Padding="30" Spacing="30">
            <Entry Text = "{Binding nomeEntry, Mode=TwoWay}" Placeholder="Nome" Keyboard="Text"></Entry>
            <Entry Text = "{Binding precoEntry, Mode=TwoWay}" Placeholder="Preco" Keyboard="Numeric"></Entry>
            <Entry Text = "{Binding marcaEntry, Mode=TwoWay}" Placeholder="Marca"></Entry>
            <Entry Text = "{Binding descricaoEntry, Mode=TwoWay}" Placeholder="Descrição"></Entry>
            <Entry Text = "{Binding localEntry, Mode=TwoWay}" Placeholder="Local no estoque"></Entry>
            <Grid>
                <Button Text="Salvar" Grid.Column="0" Command="{Binding SalvarProdutoCommand}"></Button>
                <Button Text="Deletar" Grid.Column="1" Command="{Binding DeletarProdutoCommand}"></Button>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>
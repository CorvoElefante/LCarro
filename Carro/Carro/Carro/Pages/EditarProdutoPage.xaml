<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:Carro.Resources;assembly=Carro"
             x:Class="Carro.Pages.EditarProdutoPage"
             Title="Editar Produto"
             BackgroundColor="#444444">

    <!--Essa page possui "backgroundcolor" escuro-->

    <ContentPage.ToolbarItems>
        <ToolbarItem
      Icon="{x:Static resources:Images.IconeUser232}"/>
    </ContentPage.ToolbarItems>
    
    <StackLayout>
        <ScrollView
        BackgroundColor="#FFFFF7">
            <StackLayout 
            Padding="30" 
            Spacing="30">
                <Grid>
                    <Entry
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.ColumnSpan="12"
                    Text = "{Binding nomeEntry, Mode=TwoWay}" 
                    Placeholder="Nome" 
                    Keyboard="Text"/>
                    <Image
                    Grid.Column="12"
                    Grid.Row="0"
                    Source="ic_success32.png"
                    IsOpaque="True"
                    Aspect="AspectFit"/>
                    <Image
                    Grid.Column="12"
                    Grid.Row="0"
                    Source="ic_error32.png"
                    IsVisible="{Binding nomeEntryInvalido}"
                    IsOpaque="True"
                    Aspect="AspectFit"/>

                    <Entry
                    Grid.Column="0"
                    Grid.Row="1"
                    Grid.ColumnSpan="12"
                    x:Name="precoEntry" 
                    Text = "{Binding precoEntry, Mode=TwoWay}" 
                    Placeholder="Preco" 
                    Keyboard="Numeric"/>
                    <Image
                    Grid.Column="12"
                    Grid.Row="1"
                    Source="ic_success32.png"
                    IsOpaque="True"
                    Aspect="AspectFit"/>
                    <Image
                    Grid.Column="12"
                    Grid.Row="1"
                    Source="ic_error32.png"
                    IsVisible="{Binding precoEntryInvalido}"
                    IsOpaque="True"
                    Aspect="AspectFit"/>

                    <Entry
                    Grid.Column="0"
                    Grid.Row="2"
                    Grid.ColumnSpan="12"
                    Text = "{Binding marcaEntry, Mode=TwoWay}" 
                    Placeholder="Marca"/>
                    <Image
                    Grid.Column="12"
                    Grid.Row="2"
                    Source="ic_success32.png"
                    IsOpaque="True"
                    Aspect="AspectFit"/>


                    <Entry
                    Grid.Column="0"
                    Grid.Row="3"
                    Grid.ColumnSpan="12"
                    Text = "{Binding descricaoEntry, Mode=TwoWay}" 
                    Placeholder="Descrição"/>
                    <Image
                    Grid.Column="12"
                    Grid.Row="3"
                    Source="ic_success32.png"
                    IsOpaque="True"
                    Aspect="AspectFit"/>

                    <Entry
                    Grid.Column="0"
                    Grid.Row="4"
                    Grid.ColumnSpan="12"
                    Text = "{Binding localEntry, Mode=TwoWay}" 
                    Placeholder="Local no estoque"/>
                    <Image
                    Grid.Column="12"
                    Grid.Row="4"
                    Source="ic_success32.png"
                    IsOpaque="True"
                    Aspect="AspectFit"/>
                </Grid>
            </StackLayout>
        </ScrollView>
        <Grid
            HorizontalOptions="CenterAndExpand"
            Margin="0"
            Padding="4"
            BackgroundColor="Transparent"
            ColumnSpacing="32">
            <Grid
                HorizontalOptions="Center"
                Margin="4"
                Padding="0"
                RowSpacing="-8"
                BackgroundColor="Transparent">
                <Image
                    Source="ic_success64.png"
                    IsOpaque="True"/>
                <Label
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Text="Salvar"
                    TextColor="#FFFFF7"
                    FontSize="Medium"/>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer 
                            Command="{Binding SalvarProdutoCommand}"/>
                </Grid.GestureRecognizers>
            </Grid>
            <Grid
                HorizontalOptions="Center"
                Margin="4"
                Padding="0"
                Grid.Column="1"
                RowSpacing="-8"
                BackgroundColor="Transparent">
                <Image
                    Source="ic_error64.png"
                    IsOpaque="True"/>
                <Label
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Text="Deletar"
                    TextColor="#FFFFF7"
                    FontSize="Medium"/>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer 
                            Command="{Binding DeletarProdutoCommand}"/>
                </Grid.GestureRecognizers>
            </Grid>
        </Grid>
    </StackLayout>
</ContentPage>
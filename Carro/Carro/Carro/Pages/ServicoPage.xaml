<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carro.ServicoPage">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout Padding="30" Spacing="30">
        <Label Text="Cadastro de Serviço"></Label>
        <Entry x:Name = "servicoNomeE" Placeholder="Nome" Keyboard="Text"></Entry>
        <Entry x:Name ="servicovalorVendaE" Placeholder="Preço"></Entry>
        <Entry x:Name ="servicoDescricaoE" Placeholder="Descrição"></Entry>
        <Entry x:Name ="servicoTempoE" Placeholder="Tempo de conclusão"></Entry>
        <Button x:Name ="Salvar" Text="Salvar" Clicked="SalvarClicked"></Button>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>